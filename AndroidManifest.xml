<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="org.hlidskialf.filer"
      android:versionCode="1"
      android:versionName="0.5.0">

    <application 
      android:description="@string/app_desc"
      android:icon="@drawable/filer_icon"
      android:label="@string/app_name">

      <activity android:name=".FileListActivity" android:launchMode="singleInstance">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        <intent-filter>
            <action android:name="android.intent.action.RUN" />
            <category android:name="android.intent.category.DEFAULT" />
            <data android:scheme="file" android:mimeType="text/directory" />
        </intent-filter>
      </activity>
      <activity android:name=".FileListActivity">
        <intent-filter>
            <action android:name="android.intent.action.CREATE_SHORTCUT" />
            <category android:name="android.intent.category.DEFAULT" />
        </intent-filter>
      </activity>

    </application>
</manifest> 
